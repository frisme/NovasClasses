<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NovasClasses.EstoqueDeCompras">
    <Grid BackgroundColor="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid>
            </Grid>

        <Popup x:Name="MeusPopup" 
               IsOpen="False" 
               BackgroundColor="White">
            <StackLayout>
                <Label Text="O que deseja fazer com esse produto?" />
                <Button Text="Levar à Área de Confecção" 
                        Clicked="LevarParaConfeccao" />
                <Button Text="Descartar do Estoque" 
                        Clicked="Descartar" />
            </StackLayout>
        </Popup>
    </Grid>
</ContentPage>
