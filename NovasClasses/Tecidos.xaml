<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NovasClasses.Tecidos">
    <Grid x:Name="GalinhaDoente"
          BackgroundColor="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Text="Tecidos" 
               FontSize="Title" 
               HorizontalTextAlignment="Center" 
               Grid.Row="0" />

        <Grid x:Name="gridTecidos" 
              Margin="20"
              Grid.Row="1">
            <!-- Linhas e colunas serão adicionadas no código-behind -->
        </Grid>

        <Button Text="Ir para as Compras" 
                BackgroundColor="Red" 
                Margin="20" 
                Grid.Row="2"
                Clicked="IrParaCompras" />
    </Grid>
</ContentPage>